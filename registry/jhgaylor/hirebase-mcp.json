{
  "name": "hirebase-mcp",
  "version": "1.0.0",
  "description": "A Python MCP Server for hirebase.org's API",
  "homepage": "https://github.com/jhgaylor/hirebase-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/jhgaylor/hirebase-mcp"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "hirebase-mcp",
    "jhgaylor"
  ],
  "inputs": [
    {
      "id": "hirebase_api_key",
      "type": "promptString",
      "description": "Environment variable for hirebase api key authentication",
      "password": true
    }
  ],
  "server": {
    "command": "uvx",
    "args": [
      "hirebase-mcp"
    ],
    "env": {
      "HIREBASE_API_KEY": ""
    }
  }
}
