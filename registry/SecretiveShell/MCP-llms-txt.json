{
  "name": "mcp-llms-txt",
  "version": "1.0.0",
  "description": "MCP server for SecretiveShell/Awesome-llms-txt. Add documentation directly into your conversation via MCP resources.",
  "homepage": "https://github.com/SecretiveShell/MCP-llms-txt",
  "repository": {
    "type": "git",
    "url": "https://github.com/SecretiveShell/MCP-llms-txt"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-llms-txt",
    "secretiveshell"
  ],
  "inputs": [
    {
      "id": "pythonutf8",
      "type": "promptString",
      "description": "Environment variable for pythonutf8 configuration",
      "password": false
    }
  ],
  "server": {
    "command": "uvx",
    "args": [
      "mcp-llms-txt"
    ],
    "env": {
      "PYTHONUTF8": "1"
    }
  }
}
