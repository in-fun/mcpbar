{
  "name": "@playcanvas/editor-mcp-server",
  "version": "0.0.2",
  "description": "The PlayCanvas Editor MCP Server",
  "homepage": "https://github.com/playcanvas/editor-mcp-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/playcanvas/editor-mcp-server"
  },
  "license": "MIT",
  "keywords": [
    "javascript",
    "mcp",
    "mcp-server",
    "playcanvas",
    "typescript",
    "vibe-coding",
    "webgl",
    "webgpu",
    "webxr",
    "model-context-protocol"
  ],
  "inputs": [
    {
      "id": "port",
      "type": "promptString",
      "description": "Environment variable for port configuration",
      "password": false
    }
  ],
  "server": {
    "command": "cmd",
    "args": [
      "/c",
      "npx",
      "tsx",
      "C:\\path\\to\\mcp-editor\\src\\server.ts"
    ],
    "env": {
      "PORT": "52000"
    }
  }
}
