{
  "name": "@roychri/mcp-server-asana",
  "version": "1.8.0-beta.1",
  "description": "MCP Server for Asana",
  "homepage": "https://github.com/roychri/mcp-server-asana",
  "repository": {
    "type": "git",
    "url": "https://github.com/roychri/mcp-server-asana"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server-asana",
    "roychri"
  ],
  "inputs": [
    {
      "id": "asana_access_token",
      "type": "promptString",
      "description": "Environment variable for asana access token authentication",
      "password": true
    }
  ],
  "server": {
    "command": "npx",
    "args": [
      "-y",
      "@roychri/mcp-server-asana"
    ],
    "env": {
      "ASANA_ACCESS_TOKEN": "your-asana-access-token"
    }
  }
}
