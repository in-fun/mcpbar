{
  "name": "@automation-ai-labs/mcp-wait",
  "version": "1.0.3",
  "description": "A simple MCP server for waiting/pausing execution",
  "homepage": "https://github.com/automation-ai-labs/mcp-wait",
  "repository": {
    "type": "git",
    "url": "https://github.com/automation-ai-labs/mcp-wait"
  },
  "license": "Unknown",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-wait",
    "automation-ai-labs"
  ],
  "inputs": [
    {
      "id": "transport_type",
      "type": "promptString",
      "description": "Environment variable for transport type configuration",
      "password": false
    }
  ],
  "server": {
    "command": "npx",
    "args": [
      "-y",
      "@automation-ai-labs/mcp-wait"
    ],
    "env": {
      "TRANSPORT_TYPE": "stdio"
    }
  }
}
