{
  "name": "mcp-server-clash-of-clans",
  "version": "1.0.2",
  "description": "MCP server implementation for the Clash of Clans API",
  "homepage": "https://github.com/Saunved/mcp-server-clash-of-clans",
  "repository": {
    "type": "git",
    "url": "https://github.com/Saunved/mcp-server-clash-of-clans"
  },
  "license": "Unknown",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server-clash-of-clans",
    "saunved"
  ],
  "inputs": [
    {
      "id": "clash_api_key",
      "type": "promptString",
      "description": "Environment variable for clash api key authentication",
      "password": true
    }
  ],
  "server": {
    "command": "npx",
    "args": [
      "-y",
      "mcp-server-clash-of-clans"
    ],
    "env": {
      "CLASH_API_KEY": "<your-api-key>"
    }
  }
}
