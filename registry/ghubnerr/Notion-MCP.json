{
  "name": "notion-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for Notion integration",
  "homepage": "https://github.com/makenotion/notion-mcp-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/ghubnerr/Notion-MCP"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "nodejs",
    "notion-api"
  ],
  "inputs": [
    {
      "id": "notion_api_key",
      "type": "promptString",
      "description": "Environment variable for notion api key authentication",
      "password": true
    }
  ],
  "server": {
    "command": "node",
    "args": [
      "/path/to/notion-mcp-server/build/index.js"
    ],
    "env": {
      "NOTION_API_KEY": "your_notion_api_key_here"
    }
  }
}
