{
  "name": "fastly-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for interacting with Fastly API and CLI",
  "homepage": "https://github.com/Arodoid/FastlyMCP",
  "repository": {
    "type": "git",
    "url": "https://github.com/Arodoid/FastlyMCP"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "fastlymcp",
    "arodoid"
  ],
  "inputs": [
    {
      "id": "fastly_api_key",
      "type": "promptString",
      "description": "Environment variable for fastly api key authentication",
      "password": true
    }
  ],
  "server": {
    "command": "node",
    "args": [
      "path/to/fastly-mcp.mjs"
    ],
    "env": {
      "FASTLY_API_KEY": "your_fastly_api_key"
    }
  }
}
