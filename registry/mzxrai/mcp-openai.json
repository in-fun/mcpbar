{
  "name": "@mzxrai/mcp-openai",
  "version": "0.1.1",
  "description": "MCP server for simple interaction with OpenAI API",
  "homepage": "https://github.com/mzxrai/mcp-openai",
  "repository": {
    "type": "git",
    "url": "https://github.com/mzxrai/mcp-openai"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-openai",
    "mzxrai"
  ],
  "inputs": [
    {
      "id": "openai_api_key",
      "type": "promptString",
      "description": "Environment variable for openai api key authentication",
      "password": true
    }
  ],
  "server": {
    "command": "npx",
    "args": [
      "-y",
      "@mzxrai/mcp-openai@latest"
    ],
    "env": {
      "OPENAI_API_KEY": "your-api-key-here (get one from https://platform.openai.com/api-keys)"
    }
  }
}
