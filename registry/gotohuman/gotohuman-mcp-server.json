{
  "name": "@gotohuman/mcp-server",
  "version": "0.1.2",
  "description": "MCP server for requesting human approvals with gotoHuman",
  "homepage": "https://github.com/gotohuman/gotohuman-mcp-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/gotohuman/gotohuman-mcp-server"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "gotohuman-mcp-server",
    "gotohuman"
  ],
  "inputs": [
    {
      "id": "gotohuman_api_key",
      "type": "promptString",
      "description": "Environment variable for gotohuman api key authentication",
      "password": true
    }
  ],
  "server": {
    "command": "npx",
    "args": [
      "-y",
      "@gotohuman/mcp-server"
    ],
    "env": {
      "GOTOHUMAN_API_KEY": "your-api-key"
    }
  }
}
