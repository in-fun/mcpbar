{
  "name": "linear-mcp",
  "version": "0.1.0",
  "description": "MCP server for Linear integration providing issue querying and searching capabilities",
  "homepage": "https://github.com/packetnomad/linear-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/packetnomad/linear-mcp"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "linear-mcp",
    "packetnomad"
  ],
  "inputs": [
    {
      "id": "linear_api_key",
      "type": "promptString",
      "description": "Environment variable for linear api key authentication",
      "password": true
    }
  ],
  "server": {
    "command": "node",
    "args": [
      "/absolute/path/to/linear-mcp/build/index.js"
    ],
    "env": {
      "LINEAR_API_KEY": "your_api_key"
    }
  }
}
