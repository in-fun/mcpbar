{
  "name": "ntfy-me-mcp",
  "version": "1.3.0",
  "description": "An ntfy MCP server for sending ntfy notifications to your self-hosted ntfy server from AI Agents ðŸ“¤ (supports secure token auth & more - use with npx or docker!)",
  "homepage": "https://www.npmjs.com/package/ntfy-me-mcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/gitmotion/ntfy-me-mcp"
  },
  "license": "GPL-3.0",
  "keywords": [
    "agent",
    "ai",
    "mcp",
    "modelcontextprotocol",
    "notifications",
    "ntfy",
    "ntfysh",
    "vscode",
    "docker",
    "npm",
    "model-context-protocol"
  ],
  "inputs": [
    {
      "id": "ntfy_url",
      "type": "promptString",
      "description": "Environment variable for ntfy url",
      "password": false
    },
    {
      "id": "ntfy_token",
      "type": "promptString",
      "description": "Environment variable for ntfy token",
      "password": true
    }
  ],
  "server": {
    "command": "npx",
    "args": [
      "-y",
      "ntfy-me-mcp"
    ],
    "env": {
      "NTFY_URL": "${input:ntfy_url}",
      "NTFY_TOKEN": "${input:ntfy_token}"
    }
  }
}
