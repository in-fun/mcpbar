{
  "name": "n8n-mcp-server",
  "version": "0.1.0",
  "description": "Model Context Protocol (MCP) server for n8n workflow automation",
  "homepage": "https://github.com/thiagoainvestor/n8n-mcp-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagoainvestor/n8n-mcp-server"
  },
  "license": "Unknown",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "n8n-mcp-server",
    "thiagoainvestor"
  ],
  "inputs": [
    {
      "id": "n_api_url",
      "type": "promptString",
      "description": "Environment variable for n api url",
      "password": false
    },
    {
      "id": "n_api_key",
      "type": "promptString",
      "description": "Environment variable for n api key",
      "password": true
    },
    {
      "id": "n_webhook_user",
      "type": "promptString",
      "description": "Environment variable for n webhook user",
      "password": false
    },
    {
      "id": "n_webhook_pass",
      "type": "promptString",
      "description": "Environment variable for n webhook pass",
      "password": false
    }
  ],
  "server": {
    "command": "npx",
    "args": [
      "-y",
      "n8n-mcp-server"
    ],
    "env": {
      "N_API_URL": "${input:n_api_url}",
      "N_API_KEY": "${input:n_api_key}",
      "N_WEBHOOK_USER": "${input:n_webhook_user}",
      "N_WEBHOOK_PASS": "${input:n_webhook_pass}"
    }
  }
}
