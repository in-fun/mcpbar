{
  "name": "mcp-server-novacv",
  "version": "1.0.2",
  "description": "MCP service for NovaCV API - Generate, analyze and convert resumes with NovaCV API",
  "homepage": "https://github.com/Lightbaby/mcp-server-novacv",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lightbaby/mcp-server-novacv"
  },
  "license": "Unknown",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "mcp-server-novacv",
    "lightbaby"
  ],
  "inputs": [
    {
      "id": "novacv_api_key",
      "type": "promptString",
      "description": "Environment variable for novacv api key authentication",
      "password": true
    }
  ],
  "server": {
    "command": "npx",
    "args": [
      "mcp-server-novacv"
    ],
    "env": {
      "NOVACV_API_KEY": "your_api_key"
    }
  }
}
