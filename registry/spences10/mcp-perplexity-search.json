{
  "name": "mcp-perplexity-search",
  "version": "0.0.5",
  "description": "MCP server for Perplexity search",
  "homepage": "https://github.com/spences10/mcp-perplexity-search",
  "repository": {
    "type": "git",
    "url": "https://github.com/spences10/mcp-perplexity-search"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "perplexity",
    "search"
  ],
  "inputs": [
    {
      "id": "perplexity_api_key",
      "type": "promptString",
      "description": "Environment variable for perplexity api key authentication",
      "password": true
    }
  ],
  "server": {
    "command": "npx",
    "args": [
      "-y",
      "mcp-perplexity-search"
    ],
    "env": {
      "PERPLEXITY_API_KEY": "your-perplexity-api-key"
    }
  }
}
