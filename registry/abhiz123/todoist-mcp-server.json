{
  "name": "@abhiz123/todoist-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Todoist API integration",
  "homepage": "https://github.com/abhiz123/todoist-mcp-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/abhiz123/todoist-mcp-server"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "todoist-mcp-server",
    "abhiz123"
  ],
  "inputs": [
    {
      "id": "todoist_api_token",
      "type": "promptString",
      "description": "Environment variable for todoist api token authentication",
      "password": true
    }
  ],
  "server": {
    "command": "npx",
    "args": [
      "-y",
      "@abhiz123/todoist-mcp-server"
    ],
    "env": {
      "TODOIST_API_TOKEN": "your_api_token_here"
    }
  }
}
