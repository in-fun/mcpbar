{
  "name": "mcp-server-linearapp",
  "version": "0.1.0",
  "description": "A Model Context Protocol (MCP) server for the Linear API",
  "homepage": "https://github.com/magarcia/mcp-server-linearapp",
  "repository": {
    "type": "git",
    "url": "https://github.com/magarcia/mcp-server-linearapp"
  },
  "license": "MIT",
  "keywords": [
    "linear",
    "mcp",
    "mcp-server",
    "typescript",
    "model-context-protocol"
  ],
  "inputs": [
    {
      "id": "linear_api_key",
      "type": "promptString",
      "description": "Environment variable for linear api key authentication",
      "password": true
    }
  ],
  "server": {
    "command": "npx",
    "args": [
      "-y",
      "mcp-server-linearapp"
    ],
    "env": {
      "LINEAR_API_KEY": "your_linear_api_key_here"
    }
  }
}
