{
  "name": "linear-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol server for the Linear API.",
  "homepage": "https://github.com/gerbal/linear-mcp-server-1",
  "repository": {
    "type": "git",
    "url": "https://github.com/gerbal/linear-mcp-server-1"
  },
  "license": "Unknown",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "linear-mcp-server-1",
    "gerbal"
  ],
  "inputs": [
    {
      "id": "linear_api_key",
      "type": "promptString",
      "description": "Environment variable for linear api key authentication",
      "password": true
    }
  ],
  "server": {
    "command": "npx",
    "args": [
      "-y",
      "@modelcontextprotocol/server-linear"
    ],
    "env": {
      "LINEAR_API_KEY": "your_linear_api_key_here"
    }
  }
}
